{% extends 'club_management/base.html.twig' %}

{% block title %}Gestion des saisons{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">Gestion des saisons</li>
{% endblock %}

{% block body %}
    <div class="d-flex">
        <h1>Gestion des saisons</h1>

        <a href="{{ path('season_new') }}" class="btn btn-outline-primary btn-sm ml-auto align-self-center">
            <span class="fas fa-plus"></span> Ajouter une saison
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Active</th>
                <th>Inscriptions</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for season in seasons %}
                <tr>
                    <td>{{ season.name }}</td>
                    <td>
                        {% if season.active %}
                            <span class="badge badge-pill badge-success">Active</span>
                        {% else %}
                            <span class="badge badge-pill badge-danger">Inactive</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if season.subscriptionEnabled %}
                            <span class="badge badge-pill badge-success">Ouvertes</span>
                        {% else %}
                            <span class="badge badge-pill badge-danger">Fermées</span>
                        {% endif %}
                    </td>
                    <td class="text-right">
                        <a class="btn btn-outline-warning btn-sm rounded-pill"
                           href="{{ path('season_edit', {'id': season.id}) }}">
                            <span class="fas fa-pencil-alt"></span> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Pas  de catégorie</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
