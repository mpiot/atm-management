{% extends 'club_management/base.html.twig' %}

{% block title %}{{ member.fullName }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('member_index') }}">Gestion des membres</a></li>
    <li class="breadcrumb-item active">{{ member.fullName }}</li>
{% endblock %}

{% block body %}
    <div class="d-flex">
        <h1>{{ member.fullName }}</h1>

        <div class="ml-auto align-self-center ">
            {% embed 'member/_delete_form.html.twig' %}
                {% block buttons %}
                    <div class="btn-group-sm">
                        <a class="btn btn-outline-warning" href="{{ path('member_edit', {'id': member.id}) }}">
                            <span class="fas fa-pencil-alt"></span> Modifier
                        </a>

                        {{ parent() }}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    <div>
        <div class="mb-3">Date d'inscription: {{ member.subscriptionDate|date('d/m/Y') }}</div>

        <div class="row">
            <div class="col-xl">
                <div class="card">
                    <div class="card-header">
                        Membre
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            Nom
                            <span>{{ member.civility|capitalize }} {{ member.fullName }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            Email
                            <span>{{ member.email }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            Date de naissance
                            <span>{{ member.birthday|date('d/m/Y') }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            Représentant légal
                            <span>{{ member.legalRepresentative ? member.legalRepresentative : '-' }}</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-xl mt-3 mt-xl-0">
                <div class="card">
                    <div class="card-header">
                        Adresse
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            Adresse
                            <span>{{ member.address.formattedAddress|nl2br }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            Numéro de téléphone
                            <span>{{ member.address.phoneNumber }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            Utilisable
                            <span>{{ member.address.textUsable }}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                Licence
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    Type de licence
                    <span>{{ member.textLicenseType }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    Date de fin de validité
                    <span>{{ member.licenseEndAt ? member.licenseEndAt|date('d/m/Y') : '-' }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    Numéro de licence
                    <span>{{ member.licenseNumber ? member.licenseNumber : '-' }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    Catégorie rameur
                    <span>{{ member.textRowerCategory }}</span>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
