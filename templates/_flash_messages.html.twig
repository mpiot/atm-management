{# List flashes messages #}
<div aria-live="polite" aria-atomic="true" class="toast-container">
    <div class="toast-wrapper">
        {% for label, messages in app.flashes(['success', 'notice', 'warning', 'error']) %}
            {% set color = 'notice' == label ? 'info' : 'error' == label ? 'danger' : label %}
            {% for message in messages %}
                <div role="alert" aria-live="assertive" aria-atomic="true" class="toast border-{{ color }}" data-delay="{{ 'error' == label ? '10000' : '5000' }}">
                    <div class="toast-body d-flex align-items-start">
                        <div class="text-{{ color }} align-self-center">
                            {% if 'success' == label %}
                                <span class="fas fa-check-circle"></span>
                            {% elseif 'notice' == label %}
                                <span class="fas fa-question-circle"></span>
                            {% elseif 'warning' == label %}
                                <span class="fas fa-exclamation-circle"></span>
                            {% elseif 'error' == label %}
                                <span class="fas fa-times-circle"></span>
                            {% endif %}
                        </div>
                        <div class="ml-3">
                            {{ message|trans }}
                        </div>
                        <div class="ml-auto">
                            <button type="button" class="ml-auto mb-1 close" data-dismiss="toast" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
