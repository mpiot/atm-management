{% extends 'club_management/base.html.twig' %}

{% block title %}Gestion des avaries{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">Gestion des avaries</li>
{% endblock %}

{% block body %}
    <div class="d-flex">
        <h1>Gestion des avaries</h1>

        <a href="{{ path('shell_damage_new') }}" class="btn btn-outline-primary btn-sm ml-auto align-self-center">
            <span class="fas fa-plus"></span> Ajouter une avarie
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Priorité</th>
                <th>Bâteau</th>
                <th>Catégorie</th>
                <th>Description</th>
                <th>Crée le</th>
                <th>Réparé le</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th></th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for shell_damage in shell_damages %}
                <tr>
                    <td>
                        {% if shell_damage.repairAt %}
                            <span class="badge badge-success">Terminé</span>
                        {% elseif constant('App\\Entity\\ShellDamageCategory::PRIORITY_HIGH') == shell_damage.category.priority  %}
                            <span class="badge badge-danger">Importante</span>
                        {% else %}
                            <span class="badge badge-warning">Intermédiaire</span>
                        {% endif %}
                    </td>
                    <td>{{ shell_damage.shell.fullName }}</td>
                    <td>{{ shell_damage.category.name }}</td>
                    <td>{{ shell_damage.description|nl2br }}</td>
                    <td>{{ shell_damage.createdAt|date('d/m/Y') }}</td>
                    <td>{{ shell_damage.repairAt ? shell_damage.repairAt|date('d/m/Y') }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td class="text-right">
                            <a class="btn btn-outline-warning btn-sm rounded-pill"
                               href="{{ path('shell_damage_edit', {'id': shell_damage.id}) }}">
                                <span class="fas fa-pencil-alt"></span> Modifier
                            </a>
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">Pas d'avarie</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if shell_damages|length < shell_damages.totalItemCount %}
            {{ knp_pagination_render(shell_damages) }}
        {% endif %}
    </div>
{% endblock %}
