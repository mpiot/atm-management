<!doctype html>
<html lang="fr" class="h-100">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png')}}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <title>{% block title %}Aviron Tours Métropole{% endblock %}</title>
    </head>

    <body class="d-flex flex-column h-100">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-white border-bottom shadow-sm px-4 mb-3">
                <a class="navbar-brand" href="{{ path('homepage') }}">
                    <img src="{{ asset('build/images/logo_50.png') }}" class="d-inline-block align-top" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('logbook_homepage') }}">Cahier de sorties</a>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('club_management_homepage') }}">Gestion du club</a>
                            </li>
                        {% endif %}
                    </ul>

                    {% if app.user %}
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ app.user.email }}
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{ path('profile_show') }}">Mon profil</a>
                                    <a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a>
                                </div>
                            </li>
                        </ul>
                    {% else %}
                        <div>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary rounded-pill">Se connecter</a>
                            <a href="{{ path('app_register') }}" class="btn btn-primary rounded-pill">Créer un compte</a>
                        </div>
                    {% endif %}
                </div>
            </nav>
        </header>

        {% block main_body %}
            <div id="body" class="container-fluid flex-shrink-0 mb-3">
                <div class="row mt-3">
                    <div class="col-2">
                        {% block nav %}
                        {% endblock %}
                    </div>

                    <main class="col-10">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                {% block breadcrumb %}
                                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}"><span class="fas fa-home"></span> Accueil</a></li>
                                {% endblock %}
                            </ol>
                        </nav>

                        {% block body %}{% endblock %}
                    </main>
                </div>
            </div>
        {% endblock %}

        <footer class="footer mt-auto bg-white border-top py-3">
            <div class="container-fluid d-flex">
                <div class="text-muted">
                    &copy; Aviron Tours Métropole
                </div>
            </div>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
